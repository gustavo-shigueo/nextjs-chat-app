// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  // Fields
  id            String  @id @default(uuid())
  name          String
  avatarUrl     String
  email         String  @unique
  password      String?
  googleId      String? @unique
  onlineStatus  Boolean
  emailVerified Boolean

  // Relations
  messagesSent Message[]
  chats        Chat[]

  @@index([name])
  @@index([email])
  @@index([googleId])
}

model Message {
  // Fields
  id     String   @id @default(uuid())
  text   String
  sentAt DateTime @default(now())

  // Relations
  sender   User   @relation(references: [id], fields: [senderId], onDelete: Cascade)
  senderId String
  chat     Chat   @relation(references: [id], fields: [chatId], onDelete: Cascade)
  chatId   String

  @@index([senderId])
  @@index([chatId])
  @@index([sentAt])
}

model Chat {
  // Fields
  id           String   @id @default(uuid())
  name         String?
  thumbnailUrl String?
  createdAt    DateTime @default(now())
  chatType     ChatType

  // Relations
  messages Message[]
  users    User[]
}

enum ChatType {
  PrivateChat
  GroupChat
}
